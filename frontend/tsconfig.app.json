/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@models": [
        "app/models"
      ],
      "@services": [
        "app/services"
      ],
      "@constants": [
        "app/constants"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@guards/*": [
        "app/guards/*"
      ],
      "@interceptors/*": [
        "app/interceptors/*"
      ],
      "@validators/*": [
        "app/validators/*"
      ]
    },
    "outDir": "../out-tsc/app",
    "types": []
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
